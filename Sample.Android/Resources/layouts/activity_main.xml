<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="15" CornerRadius="0">
                <Label Text="CleverTap Xamarin Demo App" HorizontalTextAlignment="Center" TextColor="Orange" FontSize="27"/>
            </Frame>
            <Label Text="Events" FontSize="Title" HorizontalTextAlignment="Center" BackgroundColor="Azure"/>
            <Button Text="Push Event and Charged Event" Clicked="sendEvents" />
            <Label Text="User Profile" FontSize="Title" HorizontalTextAlignment="Center" BackgroundColor="Azure"/>
            <Button Text="Push Profile + OnUserLogin" Clicked="userLoginPushProfile" />
            <Label Text="Push Notifications" FontSize="Title" HorizontalTextAlignment="Center" BackgroundColor="Azure"/>
            <Button Text="Create Notification Channel and Group" Clicked="notification" />
            <Button Text="Register FCM Token" Clicked="FCM_textonly" />
            <Label Text="Inbox" FontSize="Title" HorizontalTextAlignment="Center" BackgroundColor="Azure"/>
            <Button Text="init Inbox" Clicked="inbox" />
            <Button Text="set Display Unit" Clicked="displayUnit" />
            <Button Text="Show Inbox" Clicked="showInbox" />
            <Label Text="App Personalisation" FontSize="Title" HorizontalTextAlignment="Center" BackgroundColor="Azure"/>
            <Button Text="Dynamic Variables" Clicked="dynamicVariables" />
            <Button Text="Feature Flags" Clicked="featureFlag" />
            <Button Text="Product Config" Clicked="productConfig" />
        </StackLayout>
    </ScrollView>